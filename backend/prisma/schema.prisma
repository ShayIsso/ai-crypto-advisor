generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id          Int      @id @default(autoincrement())
  email       String   @unique
  name        String
  password    String
  preferences Json?    // { coins: ["bitcoin"], investorType: "HODLer", ... }
  votes       Vote[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Vote {
  id        Int      @id @default(autoincrement())
  userId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  section   String   // Which dashboard section
  vote      Boolean  // true/false
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([section])
}
